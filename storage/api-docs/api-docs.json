                                                        "created_at": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-03-04T16:33:44.000000Z"
                                                        },
                                                        "updated_at": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-03-04T16:33:44.000000Z"
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "token": {
                                                    "type": "string",
                                                    "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "codigo_resposta": {
                                            "type": "integer",
                                            "example": 111
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "333": {
                        "description": "Erro ao registrar usuário",
