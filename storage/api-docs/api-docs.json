                                    "properties": {
                                        "resposta": {
                                            "type": "string",
                                            "example": "Usuário desconectado com sucesso."
                                        },
                                        "codigo_resposta": {
                                            "type": "integer",
                                            "example": 111
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/usuario/registrar": {
