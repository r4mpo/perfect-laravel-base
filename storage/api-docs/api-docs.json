    "paths": {
        "/usuario/detalhes": {
            "get": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Obter detalhes do usuário autenticado",
                "operationId": "ba96c86bc2d185c98a77ee409881e251",
                "responses": {
                    "111": {
                        "description": "Detalhes do usuário",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "resposta": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "João"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "joao@email.com"
                                                },
                                                "email_verified_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-03-04T16:33:44.000000Z"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-03-04T16:33:44.000000Z"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-03-04T16:33:44.000000Z"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "codigo_resposta": {
                                            "type": "integer",
                                            "example": 111
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "333": {
                        "description": "Credenciais inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "resposta": {
                                            "type": "string",
                                            "example": "Credenciais e/ou sessões inválidas. Tente novamente."
                                        },
                                        "codigo_resposta": {
                                            "type": "integer",
                                            "example": 333
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/usuario/login": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Autenticar usuário e obter token",
                "operationId": "d351ad8547aa59ae5b9020ab1255fb36",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "joao@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "111": {
                        "description": "Login bem-sucedido",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "resposta": {
                                            "properties": {
                                                "token": {
                                                    "type": "string",
                                                    "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                                                },
                                                "id_usuario": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "tipo_token": {
                                                    "type": "string",
                                                    "example": "bearer"
                                                },
                                                "expira_em": {
                                                    "type": "integer",
                                                    "example": 3600
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "codigo_resposta": {
                                            "type": "integer",
                                            "example": 111
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "333": {
                        "description": "Credenciais inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "resposta": {
                                            "type": "string",
                                            "example": "Credenciais inválidas. Tente novamente."
                                        },
                                        "codigo_resposta": {
                                            "type": "integer",
                                            "example": 333
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/usuario/logout": {
            "get": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Fazer logout do usuário",
                "operationId": "74d5698a1810ce8f0761751058bcbb91",
                "responses": {
                    "111": {
                        "description": "Logout bem-sucedido",
                        "content": {
                            "application/json": {
